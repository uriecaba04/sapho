<page backtop="10mm" backbottom="10mm" backleft="20mm" backright="20mm">
  <page_header>
    <table style="width: 100%; border: solid 1px black;">
      <tr>
        <td style="text-align: left;    width: 33%"><b>{{ column_owner_name }}:</b>{{ account.owner_name  }}</td>
        <td style="text-align: center;    width: 34%"><b>{{ column_identification }}:</b>{{ account.document_number  }}</td>
        <td style="text-align: right;    width: 33%"> {{  account.date }}</td>
      </tr>
    </table>
  </page_header>
  <br>
  <table style="width: 80%;border: solid 1px #5544DD; border-collapse: collapse" align="center">
    <thead>
    <tr>
      <th style="width: 30%; text-align: left; border: solid 1px #337722; background: #CCFFCC">{{ column_pdf_date }}</th>
      <th style="width: 30%; text-align: left; border: solid 1px #337722; background: #CCFFCC">{{ column_current_value }}</th>
    </tr>
    </thead>
    <tbody>

    <tr>
      <td style="width: 30%; text-align: left; border: solid 1px #55DD44">
        {{  account.date }}
      </td>
      <td style="width: 70%; text-align: left; border: solid 1px #55DD44">
        {{  account.balance }}

      </td>
    </tr>

    </tbody>
  </table>
</page>
